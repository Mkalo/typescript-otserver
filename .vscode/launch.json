{
    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "preLaunchTask": "tsc-watch",
            "program": "${workspaceRoot}/bin/src/index.js",
            "cwd": "${workspaceRoot}",
            "sourceMaps": true,
            "outFiles": ["${workspaceRoot}/bin/**/*.js"]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Process",
            "port": 5858
        }
    ]
}